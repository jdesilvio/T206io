<!DOCTYPE html>
<html>
  <head>
    <%= typekit 'fsf0hpq' %>
    <title>T206.io</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body id="<%= page_id %>">
    <div class="wrapper">

      <%= render 'layouts/header' %>

      <div class="flash-fade">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>

      <div class="content">
        <%= yield %>

        <% if current_page?(authenticated_root_path) ||
              current_page?(unauthenticated_root_path) ||
              current_page?('/static_pages/landing') ||
              current_page?('/static_pages/index') %>
          <%= render 'layouts/footer_home' %>
        <% else %>
          <%= render 'layouts/footer' %>
        <% end %>
      </div>
    </div>
  </body>
</html>
