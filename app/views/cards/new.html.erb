<body id="home">
  <%= image_tag("logo.png", alt: "Logo") %>
  <div>
    <div id="home-main">
      <h1 class="home-text header-text oldnum">The T206 Project</h1>
      <h3 class="home-text body-text oldnum">An open source project designed to create the most comprehensive database of the legendary T206 baseball card set</h3>
    </div>
    <div class="card-input body-text oldnum">
      <%= form_for @card do |f| %>
        <%= f.select :card_name, options_from_collection_for_select(Psa_pop.select(:psa_card).distinct.order(:psa_card), :psa_card, :psa_card, ) %>
        </br>
        <%= f.submit "Card Details"%>
      <% end %>
    </div>
  </div>
</body>
